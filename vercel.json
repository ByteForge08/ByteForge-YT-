{
  "functions": {
    "api/download.py": {
      "runtime": "python@3.9",
      "maxDuration": 60
    },
    "api/info.py": {
      "runtime": "python@3.9",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|ico|svg))",
      "dest": "/public/$1"
    },
    {
      "src": "/download/video",
      "dest": "/api/download.py",
      "methods": ["GET"],
      "continue": true
    },
    {
      "src": "/download/audio",
      "dest": "/api/download.py",
      "methods": ["GET"],
      "continue": true
    },
    {
      "src": "/api/info",
      "dest": "/api/info.py",
      "methods": ["GET"],
      "continue": true
    },
    {
      "src": "/",
      "dest": "/public/index.html",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html",
      "methods": ["GET"]
    }
  ]
}
