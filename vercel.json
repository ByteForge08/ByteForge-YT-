{
  "functions": {
    "api/*.py": {
      "runtime": "python3.9",
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|ico|svg))",
      "dest": "/public/$1"
    },
    {
      "src": "/download/video",
      "dest": "/api/download.py?type=video"
    },
    {
      "src": "/download/audio",
      "dest": "/api/download.py?type=audio"
    },
    {
      "src": "/api/info",
      "dest": "/api/info.py"
    },
    {
      "src": "/health",
      "dest": "/api/health.py"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "true",
    "YTDLP_NO_UPDATE": "true"
  }
}